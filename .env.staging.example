# ─────────────────────────────────────────────
# MyFinPro — Staging Environment Configuration
# Copy to .env.staging on the staging server and fill in values
# ─────────────────────────────────────────────

# ── Node ──
NODE_ENV=staging

# ── MySQL ──
MYSQL_ROOT_PASSWORD=staging_root_password_change_me
MYSQL_DATABASE=myfinpro_staging
MYSQL_USER=myfinpro_staging
MYSQL_PASSWORD=staging_password_change_me
MYSQL_PORT=3306

# ── Redis ──
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ── Service Ports ──
API_PORT=3001
WEB_PORT=3000
NGINX_PORT=80

# ── GHCR Images ──
# GitHub Container Registry repository (lowercase), e.g., owner/myfinpro
GHCR_REPO=your-github-username/myfinpro
IMAGE_TAG=staging

# ── API Configuration ──
API_PREFIX=api
API_VERSION=v1
DATABASE_URL=mysql://myfinpro_staging:staging_password_change_me@mysql:3306/myfinpro_staging

# ── JWT ──
JWT_ACCESS_SECRET=staging_access_secret_min_32_chars_change_me
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=staging_refresh_secret_min_32_chars_change_me
JWT_REFRESH_EXPIRATION=7d

# ── CORS ──
CORS_ORIGINS=https://staging.myfinpro.example.com

# ── Rate Limiting ──
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# ── Swagger ──
SWAGGER_ENABLED=true

# ── Logging ──
LOG_LEVEL=debug

# ── Web Configuration ──
NEXT_PUBLIC_API_URL=https://staging.myfinpro.example.com/api/v1
API_INTERNAL_URL=http://api:3001/api/v1
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,he

# ── Telegram Bot (optional in staging) ──
BOT_TOKEN=
BOT_WEBHOOK_URL=
