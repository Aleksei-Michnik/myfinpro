# =============================================================================
# MyFinPro Backup Configuration
# =============================================================================
# Copy this file to backup.env and adjust values for your environment:
#   cp backup.env.example backup.env
# =============================================================================

# Backup storage
BACKUP_DIR=/var/backups/myfinpro
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_MAX_AGE_HOURS=26

# MySQL connection
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=myfinpro
MYSQL_PASSWORD=changeme
MYSQL_DATABASE=myfinpro

# Docker settings (used with --docker flag)
DOCKER_CONTAINER_NAME=myfinpro-mysql-1

# Alerting (optional)
ALERT_WEBHOOK_URL=
